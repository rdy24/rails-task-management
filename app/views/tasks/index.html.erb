<% content_for :title, "Tasks" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Daftar Tugas</h1>
    <table class="min-w-full bg-white shadow-md rounded-lg">
      <thead class="bg-gray-200">
        <tr>
          <th class="py-2 px-4">Judul</th>
          <th class="py-2 px-4">Deskripsi</th>
          <th class="py-2 px-4">Status</th>
          <th class="py-2 px-4">Due Date</th>
          <th class="py-2 px-4">Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr class="border-b">
            <td class="py-2 px-4"><%= task.title %></td>
            <td class="py-2 px-4"><%= task.description %></td>
            <td class="py-2 px-4"><%= task.status %></td>
            <td class="py-2 px-4"><%= task.due_date.strftime("%d-%m-%Y %H:%M") if task.due_date %></td>
            <td class="py-2 px-4">
              <%= link_to 'Show', task, class: "text-blue-500 hover:underline" %>
              <%= link_to 'Edit', edit_task_path(task), class: "text-green-500 hover:underline mx-2" %>
              <%= link_to 'Delete', task, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mt-4">
      <%= link_to 'Tambah Tugas Baru', new_task_path, class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
    </div>
  </div>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Tasks</h1>
    <%= link_to "New task", new_task_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="tasks" class="min-w-full">
    <% if @tasks.any? %>
      <% @tasks.each do |task| %>
        <%= render task %>
        <p>
          <%= link_to "Show this task", task, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        </p>
      <% end %>
    <% else %>
      <p class="text-center my-10">No tasks found.</p>
    <% end %>
  </div>
</div>
