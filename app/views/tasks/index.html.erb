<% content_for :title, "Tasks" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="container mx-auto p-4">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-2xl font-bold">Daftar Tugas</h1>
      <div>
        <%= link_to 'Tambah Tugas Baru', new_task_path, class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
      </div>
    </div>
    
    <table class="min-w-full bg-white shadow-md rounded-lg">
      <thead class="bg-gray-200">
        <tr>
          <th class="py-4 px-4">Judul</th>
          <th class="py-4 px-4">Deskripsi</th>
          <th class="py-4 px-4">Status</th>
          <th class="py-4 px-4">Due Date</th>
          <th class="py-4 px-4">Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% if @tasks.any? %>
          <% @tasks.each do |task| %>
            <tr class="border-b">
              <td class="py-4 px-4"><%= task.title %></td>
              <td class="py-4 px-4"><%= task.description %></td>
              <td class="py-4 px-4"><%= task.status.titleize %></td>
              <td class="py-4 px-4"><%= task.due_date.strftime("%d-%m-%Y %H:%M") if task.due_date %></td>
              <td class="py-4 px-4">
                <%= link_to 'Show', task, class: "text-white bg-blue-500 hover:bg-blue-700 px-4 py-2 rounded-lg" %>
                <%= link_to 'Edit', edit_task_path(task), class: "bg-yellow-500 hover:bg-yellow-700 px-4 py-2 mx-2 text-white rounded-lg" %>
                <%= link_to 'Delete', task, method: :delete, data: { confirm: "Are you sure?" }, class: "text-white bg-red-500 hover:bg-red-700 px-4 py-2 rounded-lg" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td class="py-4 px-4 text-center" colspan="5">No tasks found.</td>
          </tr>
        <% end %>
        
      </tbody>
    </table>
  </div>
</div>
